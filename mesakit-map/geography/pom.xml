<project xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance" xmlns = "http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation = "http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.telenav.mesakit</groupId>
        <artifactId>mesakit-map</artifactId>
        <version>0.9.13</version>
    </parent>

    <artifactId>mesakit-map-geography</artifactId>
    <packaging>jar</packaging>

    <dependencies>

        <!-- KivaKit -->

        <dependency>
            <groupId>com.telenav.kivakit</groupId>
            <artifactId>kivakit-component</artifactId>
        </dependency>
        <dependency>
            <groupId>com.telenav.kivakit</groupId>
            <artifactId>kivakit-resource</artifactId>
        </dependency>
        <dependency>
            <groupId>com.telenav.kivakit</groupId>
            <artifactId>kivakit-serialization-kryo</artifactId>
        </dependency>
        <dependency>
            <groupId>com.telenav.kivakit</groupId>
            <artifactId>kivakit-math</artifactId>
        </dependency>
        <dependency>
            <groupId>com.telenav.kivakit</groupId>
            <artifactId>kivakit-data-compression</artifactId>
        </dependency>
        <dependency>
            <groupId>com.telenav.kivakit</groupId>
            <artifactId>kivakit-collections</artifactId>
        </dependency>

        <!-- MesaKit -->

        <dependency>
            <groupId>com.telenav.mesakit</groupId>
            <artifactId>mesakit-map-measurements</artifactId>
        </dependency>

        <dependency>
            <!-- To pull in MeasurementUnitTest, which GeographyUnitTest extends -->
            <groupId>com.telenav.mesakit</groupId>
            <artifactId>mesakit-map-measurements</artifactId>
            <type>test-jar</type>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- Shapefile -->

        <!-- NOTE: this JAR file is from SourceForge and does not exist in any public Maven repository -->

        <dependency>
            <groupId>org.nocrala</groupId>
            <artifactId>shapefilereader</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/libraries/shapefilereader-1.0.jar</systemPath>
        </dependency>

        <!-- Google Maps polyline codec -->

        <dependency>
            <groupId>io.leonard</groupId>
            <artifactId>google-polyline-codec</artifactId>
            <version>0.0.2</version>
        </dependency>

    </dependencies>
    <build>
        <plugins>
            <plugin>
                <!-- So we don't have to move GeographyUnitTest to allo
                     tests in other packages to subclass it. -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
